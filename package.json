{
    "name": "marvin",
    "version": "0.0.27",
    "description": "This is a keystroke launcher for Linux",
    "repository": "https://github.com/rolandbernard/marvin/",
    "author": "Roland Bernard",
    "license": "MIT",
    "build": {
        "appId": "${name}",
        "productName": "Marvin",
        "copyright": "Copyright Â© 2020-2021 ${author}"
    },
    "os": [
        "linux"
    ],
    "main": "./bundle/main.js",
    "scripts": {
        "bundle": "webpack --config webpack.config.js",
        "start": "electron . --remote-debugging-port=9223",
        "package": "electron-builder --config electron-builder.yml --publish never"
    },
    "dependencies": {
        "lit-element": "^2.5.1"
    },
    "devDependencies": {
        "@types/webpack-env": "^1.16.2",
        "electron": "^13.1.6",
        "electron-builder": "^22.11.7",
        "html-webpack-plugin": "^5.3.2",
        "ts-loader": "^9.2.3",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.3.5",
        "webpack": "^5.44.0",
        "webpack-cli": "^4.7.2"
    }
}
